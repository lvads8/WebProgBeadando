@model List<FileModel>

@{
    ViewBag.Title = "Files";
}

<h2>Files</h2>

<table class="table">
    <thead>
    <tr>
        <th>@Html.DisplayNameForInnerType((FileModel model) => model.Name)</th>
        <th>@Html.DisplayNameForInnerType((FileModel model) => model.UploadedAt)</th>
        <th>@Html.DisplayNameForInnerType((FileModel model) => model.UploadedBy)</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @if (!Model.Any())
    {
        <tr>
            <td colspan="3" class="text-muted text-center">No results.</td>
        </tr>
    }

    @for (int i = 0; i < Model.Count; i++)
    {
        <tr>
            <td>@Html.DisplayFor(model => model[i].Name)</td>
            <td>@Html.DisplayFor(model => model[i].UploadedAt)</td>
            <td>@Html.DisplayFor(model => model[i].UploadedBy)</td>
            <td>
                <a asp-action="Details" asp-route-id="@Model[i].Id">Details</a>
            </td>
        </tr>
    }
    </tbody>
</table>