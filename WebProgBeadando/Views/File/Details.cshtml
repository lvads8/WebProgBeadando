@model FileModel

@{
    ViewBag.Title = $"{Model.Name} - Details";
}

<h2>@Html.DisplayFor(model => model.Name)</h2>
<small class="text-muted">
    @Html.DisplayFor(model => model.UploadedAt) - @Html.DisplayFor(model => model.UploadedBy)
</small>

<p class="mt-2" style="text-align: justify; max-width: 80ch;">
    @Html.DisplayFor(model => model.Description)
    <br/>
    <a href="@Model.Path" download>Download</a>
</p>